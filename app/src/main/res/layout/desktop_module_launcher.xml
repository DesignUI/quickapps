<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/top_margin_modules"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="1dp"
                style="?android:attr/listSeparatorTextViewStyle"/>
            <LinearLayout
                android:id="@+id/modules_order_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="22dp"
                android:clickable="true"
                android:background="?selectableItemBackground"
                android:orientation="vertical">
                <TextView
                    android:text="@string/launcher_control_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <TextView
                    android:text="@string/launcher_control_items_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/modules_load_external_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="22dp"
                android:clickable="true"
                android:background="?selectableItemBackground"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/load_externalg_checkbox"
                    android:layout_width="wrap_content"
                    android:checked="true"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:text="@string/launcher_load_external"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <TextView
                        android:text="@string/launcher_load_external_subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/modules_auto_load_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="22dp"
                android:clickable="true"
                android:background="?selectableItemBackground"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/auto_load_checkbox"
                    android:layout_width="wrap_content"
                    android:checked="true"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:text="@string/launcher_auto_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <TextView
                        android:text="@string/launcher_auto_add_subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/modules_remove_lg_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="22dp"
                android:clickable="true"
                android:background="?selectableItemBackground"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/remove_lg_checkbox"
                    android:layout_width="wrap_content"
                    android:checked="true"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:text="@string/launcher_remove_lg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <TextView
                        android:text="@string/launcher_remove_lg_subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/modules_orientation_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="22dp"
                android:clickable="true"
                android:background="?selectableItemBackground"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/orientation_switch"
                    android:layout_width="wrap_content"
                    android:checked="true"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="center_vertical|left"
                    android:text="@string/orientation"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>