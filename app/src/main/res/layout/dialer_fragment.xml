<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/padding_start"
    android:paddingRight="@dimen/padding_start"
    tools:layout_width="285.5dp"
    tools:layout_height="277dp"
    tools:ignore="SpUsage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/number"
        android:textSize="15sp"
        android:paddingStart="@dimen/extra_padding_start"
        android:paddingEnd="@dimen/extra_padding_start"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:id="@+id/name" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_above="@+id/first_line"
        android:paddingTop="5dp"
        android:paddingStart="@dimen/padding_start"
        android:paddingEnd="@dimen/padding_start"
        android:id="@+id/number"
        tools:text="0522324577"
        android:maxLength="12"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first_line"
        android:layout_above="@+id/below_first"
        android:orientation="horizontal">

        <Button
            android:id="@+id/digit1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:scaleType="centerInside"
            android:textColor="@android:color/black"
            android:text="@string/digit1"
            android:tag="@string/digit1"
            android:textSize="25dp"
            android:background="@drawable/floating_back_background_dialer_btn" />

        <Button
            android:id="@+id/digit2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:scaleType="centerInside"
            android:textColor="@android:color/black"
            android:text="@string/digit2"
            android:tag="@string/digit2"
            android:textSize="25dp"
            android:background="@drawable/floating_back_background_dialer_btn" />

        <Button
            android:id="@+id/digit3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:scaleType="centerInside"
            android:textColor="@android:color/black"
            android:text="@string/digit3"
            android:tag="@string/digit3"
            android:textSize="25dp"
            android:background="@drawable/floating_back_background_dialer_btn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/below_first"
        android:layout_above="@+id/above_last"
        android:orientation="horizontal">

        <Button
            android:id="@+id/digit4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:scaleType="centerInside"
            android:textColor="@android:color/black"
            android:text="@string/digit4"
            android:tag="@string/digit4"
            android:textSize="25dp"
            android:background="@drawable/floating_back_background_dialer_btn" />

        <Button
            android:id="@+id/digit5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:scaleType="centerInside"
            android:textColor="@android:color/black"
            android:text="@string/digit5"
            android:tag="@string/digit5"
            android:textSize="25dp"
            android:background="@drawable/floating_back_background_dialer_btn" />

        <Button
            android:id="@+id/digit6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:scaleType="centerInside"
            android:textColor="@android:color/black"
            android:text="@string/digit6"
            android:tag="@string/digit6"
            android:textSize="25dp"
            android:background="@drawable/floating_back_background_dialer_btn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/above_last"
        android:layout_above="@+id/digit0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/digit7"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:scaleType="centerInside"
            android:textColor="@android:color/black"
            android:text="@string/digit7"
            android:tag="@string/digit7"
            android:textSize="25dp"
            android:background="@drawable/floating_back_background_dialer_btn" />

        <Button
            android:id="@+id/digit8"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:scaleType="centerInside"
            android:textColor="@android:color/black"
            android:text="@string/digit8"
            android:tag="@string/digit8"
            android:textSize="25dp"
            android:background="@drawable/floating_back_background_dialer_btn" />

        <Button
            android:id="@+id/digit9"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:scaleType="centerInside"
            android:textColor="@android:color/black"
            android:text="@string/digit9"
            android:tag="@string/digit9"
            android:textSize="25dp"
            android:background="@drawable/floating_back_background_dialer_btn" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:paddingBottom="6dp"
        android:paddingLeft="6dp"
        android:paddingTop="6dp"
        android:paddingRight="10dp"
        android:layout_above="@+id/quick_circle_back_btn"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/quick_circle_back_btn"
        android:scaleType="centerInside"
        android:src="@drawable/ic_dial_action_delete"
        android:background="@drawable/floating_back_background_dialer_delete_btn" />

    <Button
        android:id="@+id/digit0"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_above="@+id/quick_circle_back_btn"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:textColor="@android:color/black"
        android:text="@string/digit0"
        android:tag="@string/digit0"
        android:textSize="25dp"
        android:background="@drawable/floating_back_background_dialer_btn" />

    <ImageButton
        android:id="@+id/dial"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:layout_above="@+id/quick_circle_back_btn"
        android:layout_toLeftOf="@+id/quick_circle_back_btn"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_dial_action_call"
        android:background="@drawable/floating_back_background_dialer_dial_btn" />

    <ImageButton
        android:id="@+id/quick_circle_back_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_action_back"
        android:background="@drawable/floating_back_background_dialer" />
</RelativeLayout>