<resources>

    <style name="darkTheme" parent="android:Theme.Holo.NoActionBar.Fullscreen">
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicatorDark</item>
    </style>

    <style name="lightTheme" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen">
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicatorLight</item>
    </style>

    <style name="CustomCirclePageIndicatorDark">
        <item name="fillColor">#FFF</item>
        <item name="strokeColor">#FFF</item>
        <item name="strokeWidth">1dp</item>
        <item name="radius">5dp</item>
        <item name="centered">true</item>
    </style>

    <style name="CustomCirclePageIndicatorLight">
        <item name="fillColor">#000</item>
        <item name="strokeColor">#000</item>
        <item name="strokeWidth">1dp</item>
        <item name="radius">5dp</item>
        <item name="centered">true</item>
        <item name="android:background">#FFF</item>
    </style>

    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_drawer</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicatorLight</item>
    </style>

    <style name="Widget.Styled.ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:displayOptions">homeAsUp|showTitle</item>
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
